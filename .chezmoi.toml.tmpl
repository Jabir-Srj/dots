{{- $email := promptString "email" -}}
[gpg]
  recipient = "id for the encrypt key"
[data]
  email = "{{ $email }}"
  theme = "sci" # first theme for now
  [data.github]
    email = "{{ $email }}"
    name = "username"
  [data.gpgkey]
    sign = "id for the sign key" 
    encrypt = "id for the encrypt key"
  [data.system]
    sound = "alsa" # set alsa or pulseaudio here
