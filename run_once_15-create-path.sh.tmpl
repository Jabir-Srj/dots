#!/usr/bin/env sh

add_dir() {
  [ -d $1 ] || mkdir -p $1
}

add_file() {
  [ -f $1 ] || touch $1
}

# dirs
add_dir ~/images
add_dir ~/musics
add_dir ~/.config/mpd/playlists
add_dir ~/.mails/INBOX/new
add_dir ~/.mails/INBOX/cur
add_dir ~/.mails/INBOX/tmp
add_dir ~/.mails/Junk

chmod -R 700 ~/.mails

# files
add_file ~/.config/mpd/database
add_file ~/.config/mpd/state
